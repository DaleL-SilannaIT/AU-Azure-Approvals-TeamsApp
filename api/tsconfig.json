{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "es6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types"],
    "forceConsistentCasingInFileNames": true
  }
}
